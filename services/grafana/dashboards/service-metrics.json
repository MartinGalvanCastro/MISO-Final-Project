{
  "id": null,
  "title": "Service Metrics Overview",
  "tags": ["microservices"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "sum(rate(http_requests_total{job=\"orders-service\"}[5m]))",
          "legendFormat": "Orders Service"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "sum(rate(http_requests_total{job=\"inventory-service\"}[5m]))",
          "legendFormat": "Inventory Service"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Error Rate % by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "100 * (sum(rate(http_requests_total{job=\"orders-service\", status=~\"4xx|5xx\"}[5m])) / sum(rate(http_requests_total{job=\"orders-service\"}[5m])))",
          "legendFormat": "Orders Service Error %"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "100 * (sum(rate(http_requests_total{job=\"inventory-service\", status=~\"4xx|5xx\"}[5m])) / sum(rate(http_requests_total{job=\"inventory-service\"}[5m])))",
          "legendFormat": "Inventory Service Error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Response Time P95 by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"orders-service\"}[5m])) by (le))",
          "legendFormat": "Orders Service P95"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"inventory-service\"}[5m])) by (le))",
          "legendFormat": "Inventory Service P95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Response Time P99 by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"orders-service\"}[5m])) by (le))",
          "legendFormat": "Orders Service P99"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"inventory-service\"}[5m])) by (le))",
          "legendFormat": "Inventory Service P99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "gridPos": {
