{
  "id": null,
  "title": "Service Metrics Overview",
  "tags": ["microservices"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "ECS Running Tasks by Service",
      "type": "stat",
      "targets": [
        {
          "datasource": {
            "type": "cloudwatch",
            "uid": "CloudWatch-UID"
          },
          "refId": "A",
          "region": "us-east-1",
          "namespace": "ECS/ContainerInsights",
          "metricName": "RunningTaskCount",
          "dimensions": {
            "ServiceName": "medisupply-orders-service",
            "ClusterName": "medisupply-cluster"
          },
          "statistic": "Maximum",
          "period": "300"
        },
        {
          "datasource": {
            "type": "cloudwatch",
            "uid": "CloudWatch-UID"
          },
          "refId": "B",
          "region": "us-east-1",
          "namespace": "ECS/ContainerInsights",
          "metricName": "RunningTaskCount",
          "dimensions": {
            "ServiceName": "medisupply-inventory-service",
            "ClusterName": "medisupply-cluster"
          },
          "statistic": "Maximum",
          "period": "300"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "RunningTaskCount"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Orders Service Tasks"
              }
            ]
          }
        ]
      },
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "textMode": "auto"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "HTTP Request Rate by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "sum(rate(http_requests_total{job=\"orders-service\"}[5m])) by (handler, method)",
          "legendFormat": "Orders: {{method}} {{handler}}"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "sum(rate(http_requests_total{job=\"inventory-service\"}[5m])) by (handler, method)",
          "legendFormat": "Inventory: {{method}} {{handler}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 2,
      "title": "Error Rate % by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "100 * (sum(rate(http_requests_total{job=\"orders-service\", status=~\"4xx|5xx\"}[5m])) by (handler, method) / sum(rate(http_requests_total{job=\"orders-service\"}[5m])) by (handler, method))",
          "legendFormat": "Orders Error %: {{method}} {{handler}}"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "100 * (sum(rate(http_requests_total{job=\"inventory-service\", status=~\"4xx|5xx\"}[5m])) by (handler, method) / sum(rate(http_requests_total{job=\"inventory-service\"}[5m])) by (handler, method))",
          "legendFormat": "Inventory Error %: {{method}} {{handler}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 3,
      "title": "Response Time P95 by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"orders-service\"}[5m])) by (handler, method, le))",
          "legendFormat": "Orders P95: {{method}} {{handler}}"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"inventory-service\"}[5m])) by (handler, method, le))",
          "legendFormat": "Inventory P95: {{method}} {{handler}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 4,
      "title": "Response Time P99 by Service",
      "type": "timeseries",
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "A",
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"orders-service\"}[5m])) by (handler, method, le))",
          "legendFormat": "Orders P99: {{method}} {{handler}}"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "refId": "B",
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"inventory-service\"}[5m])) by (handler, method, le))",
          "legendFormat": "Inventory P99: {{method}} {{handler}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "refresh": "10s",
  "schemaVersion": 36,
  "version": 1
}