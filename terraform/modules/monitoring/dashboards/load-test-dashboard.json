{
  "dashboard": {
    "id": null,
    "title": "Load Test Monitoring",
    "tags": ["load-test", "performance"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[1m]))",
            "legendFormat": "Total RPS",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total[1m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Response Time Percentiles",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[1m])) by (le))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[1m])) by (le))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Active ECS Tasks",
        "type": "graph",
        "targets": [
          {
            "expr": "aws_ecs_service_running_count",
            "legendFormat": "{{service_name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Task Count",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "CPU Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total{container!=\"\"}[1m])) by (service) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "(avg(container_memory_usage_bytes{container!=\"\"}) by (service) / avg(container_spec_memory_limit_bytes{container!=\"\"}) by (service)) * 100",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory %",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{status=~\"4..|5..\"}[1m])) / sum(rate(http_requests_total[1m]))) * 100",
            "legendFormat": "Total Error Rate",
            "refId": "A"
          },
          {
            "expr": "(sum(rate(http_requests_total{status=~\"4..|5..\"}[1m])) by (service) / sum(rate(http_requests_total[1m])) by (service)) * 100",
            "legendFormat": "{{service}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Error %",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "ALB Target Health",
        "type": "graph",
        "targets": [
          {
            "expr": "aws_alb_target_group_healthy_hosts",
            "legendFormat": "{{target_group}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Healthy Targets",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Load Test Statistics",
        "type": "table",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "format": "table",
            "instant": true,
            "legendFormat": "Total RPS",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "format": "table",
            "instant": true,
            "legendFormat": "95th Percentile Latency",
            "refId": "B"
          },
          {
            "expr": "(sum(rate(http_requests_total{status=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total[5m]))) * 100",
            "format": "table",
            "instant": true,
            "legendFormat": "Error Rate %",
            "refId": "C"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ]
  }
}